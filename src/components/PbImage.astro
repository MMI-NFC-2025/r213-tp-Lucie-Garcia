---
import { getImageUrl } from "../backend.mjs";
import { Image } from "astro:assets";

const { record, recordImage, width = 400, height = 300 } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.NomMaison || "Images"}
            inferSize={true}
            width={width}
            height={height}
            class="w-full h-64 object-cover"
        />
    )
}
