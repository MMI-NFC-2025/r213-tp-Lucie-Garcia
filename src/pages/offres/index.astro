---
import Layout from "../../layouts/Layout.astro";
import OffreCard from "../../components/OffreCard.astro";
import "../../styles/global.css";
import { getOffres } from "../../backend.mjs";
import Surface from "./surface/[surface].astro";
const offres = await getOffres();
console.log("Offres dans la page:", offres);
import { filterByPrix } from "../../backend.mjs";

let message = "";
let Offres = [];
if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const minPrix = parseInt(data.get("minPrix"));
    const maxPrix = parseInt(data.get("maxPrix"));

    if (minPrix > 0 && maxPrix > 0 && maxPrix > minPrix) {
        Offres = await filterByPrix(minPrix, maxPrix);
        if (Offres.length === 0) {
            message = `Pas d'offres entre ${minPrix}€ et ${maxPrix}€`;
        } else {
            message = `Liste des offres entre ${minPrix}€ et ${maxPrix}€`;
        }
    } else {
        message = "Veuillez entrer des valeurs valides pour le prix.";
    }
} else {
    Offres = await getOffres();
}
---

<Layout titre="Offres">
    <h1 class="flex font-black text-9xl justify-center items-center p-30">
        Offres
    </h1>
    <p class="flex font-extralight text-2xl justify-center items-center p-10">
        Découvrez nos offres exceptionnelles.
    </p>

    <button
        id="favori-button"
        class="bg-slate-600 rounded-lg text-white p-2 ml-7 hover:bg-slate-500 hover:scale-105 transition-transform"
        >Afficher les favoris</button
    >
    <a
        href={`/offres/surface/${80}`}
        class="ml-7 text-slate-500 hover:underline"
        >Voir maisons ayant une surface supérieure à 80 m²</a
    >
    <form
        action="/offres"
        method="POST"
        class="flex gap-4 items-center my-4 ml-7"
    >
        <input type="number" name="minPrix" placeholder="Prix minimum" />
        <input type="number" name="maxPrix" placeholder="Prix maximum" />
        <input type="submit" value="Filtrer par prix" />
    </form>
    <a href="/offres/add" class="ml-7 text-slate-500 hover:underline"
        >Ajouter une offre</a
    >
    <div class="grid grid-cols-3 justify-center p-3">
        {
            offres.map((of) => (
                <div class="offre" data-favori={of.favori.toString()}>
                    <OffreCard offre={of} />
                </div>
            ))
        }
    </div>

    <script>
        //@ts-nocheck
        const button = document.getElementById("favori-button");
        let showOnlyFavorites = false;

        button?.addEventListener("click", () => {
            showOnlyFavorites = !showOnlyFavorites;
            const offres = document.querySelectorAll(".offre");

            offres.forEach((offre) => {
                const isFavori = offre.dataset.favori === "true";

                if (showOnlyFavorites) {
                    offre.style.display = isFavori ? "block" : "none";
                    button.textContent = "Afficher tout";
                } else {
                    offre.style.display = "block";
                    button.textContent = "Afficher les favoris";
                }
            });
        });
    </script>
</Layout>
