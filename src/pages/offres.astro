---
import Layout from "../layouts/Layout.astro";
import OffreCard from "../components/OffreCard.astro";
import "../styles/global.css";
import { getOffres } from "../backend.mjs";
const offres = await getOffres();
console.log('Offres dans la page:', offres);
---

<Layout titre="Offres">
    <h1 class="flex font-black text-9xl justify-center items-center p-30">
        Offres
    </h1>
    <p class="flex font-extralight text-2xl justify-center items-center p-10">
        DÃ©couvrez nos offres exceptionnelles.
    </p>

    <button
        id="favori-button"
        class="bg-slate-600 rounded-lg text-white p-2 ml-7 hover:bg-slate-500 hover:scale-105 transition-transform"
        >Afficher les favoris</button
    >
    <div class="grid grid-cols-3 justify-center p-3">
        {
            offres.map((of) => (
                <div class="offre" data-favori={of.favori.toString()}>
                    <OffreCard offre={of} />
                </div>
            ))
        }
    </div>

    <script>
        //@ts-nocheck
        const button = document.getElementById("favori-button");
        let showOnlyFavorites = false;

        button?.addEventListener("click", () => {
            showOnlyFavorites = !showOnlyFavorites;
            const offres = document.querySelectorAll(".offre");

            offres.forEach((offre) => {
                const isFavori = offre.dataset.favori === "true";

                if (showOnlyFavorites) {
                    offre.style.display = isFavori ? "block" : "none";
                    button.textContent = "Afficher tout";
                } else {
                    offre.style.display = "block";
                    button.textContent = "Afficher les favoris";
                }
            });
        });
    </script>
</Layout>
